#!/bin/sh

if [ -z "$PGINCDIR" ]; then
	PGINCDIR=$(find /usr -iname libpq-fe.h 2>/dev/null)
fi
if [ -z "$PGINCDIR" ]; then
	PGINCDIR=$(find /opt/postgresql -iname libpq-fe.h 2>/dev/null)
fi
if [ ! -z "$PGINCDIR" ]; then
	PGINCDIR=$(dirname $PGINCDIR)
fi

if [ -z "$PGLIBDIR" ]; then
	PGLIBDIR=$(find /usr -iname libpq.so 2>/dev/null)
fi
if [ -z "$PGLIBDIR" ]; then
	PGLIBDIR=$(find /opt/postgresql -iname libpq.so 2>/dev/null)
fi
if [ ! -z "$PGLIBDIR" ]; then
	PGLIBDIR=$(dirname $PGLIBDIR)
fi

if [ -z "$PGINCDIR" -o -z "$PGLIBDIR" ]; then
        echo "**************************************" >> ${LOG}
        echo 'Warning: postgresql-server-dev-all package not installed' >> ${LOG}
        echo 'Warning: libclip-postgres make skip' >> ${LOG}
	exit 1
fi

sed -e "s,@PGINCDIR@,${PGINCDIR:-/usr/include},g" \
	-e "s,@PGLIBDIR@,${PGLIBDIR:-/usr/lib},g" \
	Makefile.in > Makefile


